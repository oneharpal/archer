<p style="color: green"><%= notice %></p>

<%= render @project %>

<div>
  <%= link_to "Edit this project", edit_project_path(@project) %> |
  <%= link_to "Back to projects", projects_path %>

  <h1>Records</h1>

  <div id="records">
    <table>
      <tr>
        <th>name</th>
        <th>spent amount</th>
        <th>spent on</th>
        <th>Links</th>

      </tr>
        <% @project.records.each do |record| %>
          <tr>
            <td> <%= record.name %> </td>
            <td> <%= record.amount %> </td>
            <td> <%= record.order_on %> </td>
            <td> <%= link_to "Show this record", record %> </td>
          </tr>
        <% end %>

    </table>
  </div>

  <div>
    <hr/>
    <p>Total spent: <%= @project.records.sum(:amount)%> </p>
    <hr/>
  </div>
<%= link_to "New record", new_record_path %>

  <%#= button_to "Destroy this project", @project, method: :delete %>
</div>
