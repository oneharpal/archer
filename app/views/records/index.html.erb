<h1>Records</h1>

<div id="records">
  <% @records.each do |record| %>
    <%= render record %>
    <p>
      <%= link_to "Show this record", record %>
      <%= link_to "Show this project", record.project %>

    </p>
    <hr/>
  <% end %>
</div>

